<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/ssl_info_issued_by"
        android:textAppearance="?attr/textAppearanceListItemSmall"
        android:textDirection="locale"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/ssl_layout_issue_by"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textAppearance="?attr/textAppearanceListItemSmall"
        android:textDirection="locale"
        tools:text="Test Cert Authority" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/ssl_info_issued_to"
        android:textAppearance="?attr/textAppearanceListItemSmall"
        android:textDirection="locale"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/ssl_layout_issue_to"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textAppearance="?attr/textAppearanceListItemSmall"
        android:textDirection="locale"
        tools:text="Test Company" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/ssl_info_issued_on"
        android:textAppearance="?attr/textAppearanceListItemSmall"
        android:textDirection="locale"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/ssl_layout_issue_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textAppearance="?attr/textAppearanceListItemSmall"
        android:textDirection="locale"
        tools:text="today" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/ssl_info_expires_on"
        android:textAppearance="?attr/textAppearanceListItemSmall"
        android:textDirection="locale"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/ssl_layout_expire_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textAppearance="?attr/textAppearanceListItemSmall"
        android:textDirection="locale"
        tools:text="tomorrow" />

    <TextView
        android:id="@+id/algorithm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/algorithm"
        android:textAppearance="?android:attr/textAppearanceListItemSmall"
        android:textDirection="locale"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/ssl_layout_serial_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textAppearance="?android:attr/textAppearanceListItemSmall"
        android:textDirection="locale"
        tools:text="tomorrow" />

</LinearLayout>
